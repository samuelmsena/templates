set-connect-timeout 1
set-read-timeout 5
set-ssh-version 2

# Definir linguagem como inglês
expect "*$"
exec "export LC_ALL=C"

# limpa sessão sudo
expect "*$"
exec "sudo -k"

#Executa o comando passwd no shell com sudo
expect "*$"
exec "sudo passwd [#USERNAME#]"

#Coloca a senha do sudo
expect "*:"
exec "[#COE_SENHA#]"

#Nova senha
expect "*password:"
exec "[#SENHA_NOVA#]"

#Repete a nova senha
expect "*password:"
exec "[#SENHA_NOVA#]"

#Confirma atualização
expect "*successfully"

#Sai do equipamento
expect "*$"
exec "exit"

end
